<% provide(:title, "Forgot Password") %>
<h1>Forgot Password</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @user, :as => :user, :url => forgot_password_path, :method => :patch do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label 'name or email:' %>
      <%= f.text_field :name %>

      <%= f.submit "Send Password Reset Instructions", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>